generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Location {
  id         String  @id @default(uuid())
  country    String
  state      String
  district   String
  street     String
  number     Int
  complement String?
  meetId     String  @unique
  meet       Meet    @relation(fields: [meetId], references: [id])
}

model Meet {
  id          String    @id @default(uuid())
  title       String    @db.VarChar(255)
  description String
  image       String
  location    Location?
  creat_at    DateTime  @default(now())
}
